<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hotelFlorencia.View.RestaurantePage"
             Title="Restaurante">
    
    <ListView x:Name="listPlatos" HasUnevenRows="True" ItemSelected="ListPlatos_ItemSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Margin="10" Padding="10" HeightRequest="220">
                        <Grid Margin="1" BackgroundColor="White" RowSpacing="0" HeightRequest="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="{Binding Foto}"></Image>
                        <Label Grid.Row="1" Text="{Binding Nombre}" HorizontalTextAlignment="Start"></Label>
                    </Grid>
                    </Frame>
                    <!--<StackLayout>
                        <Image  Source="{Binding foto}"></Image>
                        <Label Text="{Binding nombre}"></Label>
                    </StackLayout>-->
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>