<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:hotelFlorencia.ViewModel"
             x:Class="hotelFlorencia.View.PlatoMenuDetail"
             Title="Platos">
   
    <ListView ItemsSource="{Binding Platos}"
              RowHeight="100"
              HasUnevenRows="True" 
              Footer="">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Vertical">
                        <Frame>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}" FontSize="Medium" FontAttributes="Bold"></Label>
                                <Image Source="{Binding Image}" HeightRequest="220" WidthRequest="502"></Image>
                                <Label Text="{Binding Price}" FontSize="Medium" FontAttributes="Bold"></Label>
                                <Label Text="{Binding Price2}" FontSize="Medium" FontAttributes="Bold"></Label>
                                <Label Text="{Binding Description}" FontSize="Medium" FontAttributes="Bold"></Label>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>