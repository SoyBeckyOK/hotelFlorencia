<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hotelFlorencia.Vistas.Restaurante.PostresRestaurantePage"
             Title="Postres">
    <ScrollView>
        <StackLayout>
            <Frame  Padding="10" Margin="10" HeightRequest="500" BackgroundColor="White">
                <Grid HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Row="0" Grid.ColumnSpan="2" Source="Postres.jpg"></Image>
                    <Label Grid.Row="1" Grid.ColumnSpan="2" Text="Postres" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" ></Label>
                    <Label Grid.Row="2" Grid.Column="0" Text="Flan de Queso" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="2" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                    <Label Grid.Row="3" Grid.Column="0" Text="Flan de Caramelo" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="3" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                    <Label Grid.Row="4" Grid.Column="0" Text="Pastel de Higo" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="4" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                    <Label Grid.Row="5" Grid.Column="0" Text="Tres Leches" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="5" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                    <Label Grid.Row="6" Grid.Column="0" Text="Pastel de Queso" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="6" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                    <Label Grid.Row="7" Grid.Column="0" Text="Cocktail de Frutas" FontSize="Small" FontAttributes="Bold"></Label>
                    <Label Grid.Row="7" Grid.Column="1" Text="$2.30" HorizontalOptions="End"></Label>
                </Grid>
            </Frame>
            <Frame>
                <Label  Text="Todos nuestros postres incluyen Café" FontAttributes="Italic" HorizontalOptions="Center" FontSize="Small"></Label>
            </Frame>
        </StackLayout>

    </ScrollView>
</ContentPage>