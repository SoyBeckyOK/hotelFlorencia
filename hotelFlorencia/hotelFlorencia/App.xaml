<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hotelFlorencia.App">
    <Application.Resources>
        
            <ResourceDictionary>
                <Style x:Key="BotonesMenu" TargetType="Button">
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="HeightRequest" Value="40"/>
                <Setter Property="Opacity" Value="0.8"/>
                <Setter Property="FontSize" Value="Small"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="BorderWidth" Value="0.80"/>
            </Style>
            
            <Style x:Key="StyleEditor" TargetType="Editor">
                <Setter Property="IsEnabled" Value="False"/>
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontSize" Value="Small"/>
            </Style>

            </ResourceDictionary>
        <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="BoldFont">
                <On Platform="Android" Value="Shrikhand-Regular.ttf#Shrikhand"/>
            </OnPlatform>
        </ResourceDictionary>
    </Application.Resources>
</Application>